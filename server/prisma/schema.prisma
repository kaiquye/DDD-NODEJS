generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String?
  email     String    @unique
  password  String
  document  Document?
  role      Role?
  Team      Team[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messageId Int?
}

model Document {
  id        Int      @id @default(autoincrement())
  document  String
  type      String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id        Int      @id @default(autoincrement())
  role      String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id        Int       @id @default(autoincrement())
  name      String
  user      User?     @relation(fields: [managerId], references: [id])
  managerId Int?      @unique
  messages  Message[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Message {
  id        Int      @id @default(autoincrement())
  name      String
  Team      Team?    @relation(fields: [team_id], references: [id])
  team_id   Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
